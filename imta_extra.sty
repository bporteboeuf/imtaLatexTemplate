% \imtaInlinecode
% Typeset inline code
% First parameter is the language of the text to typeset
% Second parameter is the text to typeset
\newcommand{\imtaInlinecode}[2]{%
    \setlength{\fboxsep}{2pt}\colorbox{imtaInlineCodeBackground}{\mintinline{#1}{#2}}%
}

\makeatletter
% We propose the possibility to switch from roman to arabic numbers when starting the core content of the report
\newif\if@mainmatter \@mainmattertrue
% The \frontmatter command defines the begining of the document and its introduction
% attributes (title page, table of contents, etc)
\def\frontmatter{%
    \@mainmatterfalse \pagenumbering{roman}}
% The \mainmatter[o] command defines the begining of the document's core
\def\mainmatter{%
    \@mainmattertrue \pagenumbering{arabic}}
\makeatother


\makeatletter
\newif\if@chapterdefined % A new \if statement is created to allow easier checking for the existance of \chapter
\@ifundefined{chapter}{\global \@chapterdefinedfalse}{\global \@chapterdefinedtrue}

% The chapter command is redefined when relevant, in order to update the upper section informations
\if@chapterdefined
\let\oldchapter\chapter % The reference command is saved and a new one is redefined, based on the old. 
% It is VERY important to catch the star version as well, otherwise it will not compile
\renewcommand*{\chapter}{\@ifstar{\starchapter}{\@dblarg\nostarchapter}}

\newcommand*\starchapter[1]{%
    \if@twocolumn % We want to make sure the chapter page is always on a one column full page
    \onecolumn \cleardoublepage \oldchapter*{#1} \twocolumn
    \else
    \cleardoublepage \oldchapter*{#1}
    \fi
    \gdef\uppersectiontitle{#1} \gdef\uppersectionnumber{ } \global\@uppersectionprintedinLOFfalse  \global\@uppersectionprintedinLOTfalse}

\def\nostarchapter[#1]#2{%
    \if@twocolumn % We want to make sure the chapter page is always on a one column full page
    \onecolumn \cleardoublepage \oldchapter[{#1}]{#2} \twocolumn
    \else
    \cleardoublepage \oldchapter[{#1}]{#2}
    \fi
    \gdef\uppersectiontitle{#1}  \gdef\uppersectionnumber{\thechapter. } \global\@uppersectionprintedinLOFfalse  \global\@uppersectionprintedinLOTfalse}

\else
\relax
\fi
\makeatother


% The section command is redefined, in order to update the upper section informations
\makeatletter
    \if@chapterdefined
        \relax
    \else
        \let\oldsection\section
        \renewcommand{\section}{\@ifstar{\starsection}{\@dblarg\nostarsection}}
        \newcommand\starsection[1]{%
            \oldsection*{#1}  \gdef\uppersectiontitle{#1} \gdef\uppersectionnumber{ } \global\@uppersectionprintedinLOFfalse  \global\@uppersectionprintedinLOTfalse}
        \def\nostarsection[#1]#2{%
            \oldsection[{#1}]{#2} \gdef\uppersectiontitle{#1} \gdef\uppersectionnumber{\thesection. } \global\@uppersectionprintedinLOFfalse  \global\@uppersectionprintedinLOTfalse}
    \fi
\makeatother




